FORM DB_UPD_ZGCMV_PROJH_1 .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZGCMV_PROJH_1.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZGCMV_PROJH_1-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZGCPROJH_1 WHERE
  PROJECTNUMBER = ZGCMV_PROJH_1-PROJECTNUMBER .
    IF SY-SUBRC = 0.
    DELETE ZGCPROJH_1 .
    ENDIF.
    SELECT SINGLE FOR UPDATE * FROM ZGCPROJH_2 WHERE
    PROJECTNUMBER = ZGCPROJH_1-PROJECTNUMBER .
    IF SY-SUBRC = 0.
    DELETE ZGCPROJH_2 .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZGCPROJH_1 WHERE
  PROJECTNUMBER = ZGCMV_PROJH_1-PROJECTNUMBER .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZGCPROJH_1.
    ENDIF.
ZGCPROJH_1-CLIENTNUMBER =
ZGCMV_PROJH_1-CLIENTNUMBER .
ZGCPROJH_1-PROJECTNUMBER =
ZGCMV_PROJH_1-PROJECTNUMBER .
    IF SY-SUBRC = 0.
    UPDATE ZGCPROJH_1 ##WARN_OK.
    ELSE.
    INSERT ZGCPROJH_1 .
    ENDIF.
    SELECT SINGLE FOR UPDATE * FROM ZGCPROJH_2 WHERE
    PROJECTNUMBER = ZGCPROJH_1-PROJECTNUMBER .
      IF SY-SUBRC <> 0.   "insert preprocessing: init WA
        CLEAR ZGCPROJH_2.
ZGCPROJH_2-PROJECTNUMBER =
ZGCPROJH_1-PROJECTNUMBER .
      ENDIF.
ZGCPROJH_2-PROJECTDESC =
ZGCMV_PROJH_1-PROJECTDESC .
ZGCPROJH_2-PROJECTLOCATION =
ZGCMV_PROJH_1-PROJECTLOCATION .
    IF SY-SUBRC = 0.
    UPDATE ZGCPROJH_2 ##WARN_OK.
    ELSE.
    INSERT ZGCPROJH_2 .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZGCMV_PROJH_1-UPD_FLAG,
STATUS_ZGCMV_PROJH_1-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
