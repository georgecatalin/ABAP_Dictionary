FORM GET_DATA_ZGCMV_PROJH_1.
  PERFORM VIM_FILL_WHERETAB.
*.read data from database.............................................*
  REFRESH TOTAL.
  CLEAR   TOTAL.
  SELECT * FROM ZGCPROJH_1 WHERE
(VIM_WHERETAB) .
    CLEAR ZGCMV_PROJH_1 .
ZGCMV_PROJH_1-CLIENTNUMBER =
ZGCPROJH_1-CLIENTNUMBER .
ZGCMV_PROJH_1-PROJECTNUMBER =
ZGCPROJH_1-PROJECTNUMBER .
    SELECT SINGLE * FROM ZGCPROJH_2 WHERE
PROJECTNUMBER = ZGCPROJH_1-PROJECTNUMBER .
    IF SY-SUBRC EQ 0.
ZGCMV_PROJH_1-PROJECTDESC =
ZGCPROJH_2-PROJECTDESC .
